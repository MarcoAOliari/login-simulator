<head>
    <link href="/stylesheets/posts/show.css" rel="stylesheet" type="text/css">
</head>

<%- include("../partials/sidebar") %>

<div class="line"></div>

<h1><%= post.title %></h1>
<p><%= post.text %> </p> 
