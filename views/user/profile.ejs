<%- include("../partials/sidebar") %>

<h1>Olá <%= currentUser.firstName %> </h1>

<form action="/profile/<%= pageUser.id %>/posts/new" method="POST">
    <input type="text" name="post[title]" placeholder="Um título"><br>
    <textarea name="post[text]" cols="30" rows="10" placeholder="Aqui vem seu post"></textarea>
    <button type="submit">Teste</button>
</form>

<div class="line"></div>

<% pageUser.posts.forEach(function(post){ %>

    <h2><%= post.title %></h2>
    <p><%= post.text %></p>

    <a href="/profile/<%= pageUser.id %>/posts/<%= post._id %>"><button>VER POST</button></a>

    <div class="line"></div>

<% }) %> 

